{
  "name": "openai-proxy",
  "version": "1.0.0",
  "description": "A proxy for OpenAI/Ollama API to enabling tool calls",
  "license": "MIT",
  "author": "oct4pie",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "start": "npm run build && node --no-deprecation dist/src/index.js",
    "start:js": "node --no-deprecation dist/src/index.js",
    "start:ts": "ts-node --esm src/index.ts",
    "test": "mocha \"src/test/{unit,parser,streaming}/**/*.test.{js,ts}\"",
    "test:all": "node src/test/runners/run-all-tests.ts",
    "test:sequential": "node src/test/utils/run-all-tests-sequential.ts",
    "test:xml": "mocha \"src/test/parser/xml/*.test.{js,ts}\"",
    "test:llm": "mocha \"src/test/parser/llm-patterns/*.test.{js,ts}\"",
    "test:integration": "mocha \"src/test/integration/*.test.{js,ts}\"",
    "test:edge": "mocha \"src/test/parser/edge-cases/*.test.{js,ts}\"",
    "test:html": "mocha \"src/test/parser/html/*.test.{js,ts}\"",
    "test:streaming": "mocha \"src/test/streaming/*.test.{js,ts}\"",
    "test:unit": "mocha \"src/test/unit/**/*.test.{js,ts}\"",
    "test:runners": "mocha \"src/test/runners/*.test.{js,ts}\"",
    "test:coverage": "c8 mocha \"src/test/{unit,parser,streaming}/**/*.test.{js,ts}\"",
    "test:coverage:all": "c8 mocha \"src/test/**/*.test.{js,ts}\"",
    "test:single": "mocha",
    "test:tools": "node src/test/runners/run-tool-call-tests.ts",
    "test:all-without-integration": "mocha \"src/test/{unit,parser,streaming}/**/*.test.{js,ts}\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:strict": "eslint . --ext .ts,.js --max-warnings 0",
    "check-all": "npm run type-check && npm run lint:strict"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.2.0",
    "http-proxy-middleware": "^3.0.5",
    "oboe": "^2.1.7",
    "openai": "^4.95.0",
    "string-width": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "c8": "^9.1.0",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
